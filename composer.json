{
    "name": "ecomdev/message-broker",
    "description": "Library that allows async message like communication for reactive PHP applications",
    "type": "library",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.3",
        "phpmd/phpmd": "^2.6",
        "brainmaestro/composer-git-hooks": "^2.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Chepurnyi",
            "email": "ivan.chepurnyi@ecomdev.org"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "EcomDev\\MessageBroker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcomDev\\MessageBroker\\": "tests/"
        }
    },
    "scripts": {
        "phpmd": "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "phpcs": "phpcs --standard=PSR1,PSR2 src/ tests/",
        "test": "phpunit --colors --coverage-text",
        "pre-commit-hook": [
            "composer phpmd",
            "composer phpcs",
            "composer test"
        ],
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": "composer pre-commit-hook"
        }
    }
}
